<section>
  <div class="px-8 py-32 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="max-w-lg mx-auto text-center">
      <h2
        class="text-xl leading-tight tracking-tight sm:text-2xl md:text-3xl lg:text-4xl font-semibold text-base-900"
      >
        Empieza tu prueba gratuita
      </h2>
      <p class="text-base leading-normal mt-4 text-base-500 font-medium">
        Regístrate y comienza a usar ProTrack para impulsar tu negocio.
      </p>
    </div>

    <!-- Ajusta el "action" y "method" según tu backend, 
         O usa un formulario manejado por Astro/React/Vue/etc. -->
    <form action="/signup" method="POST" class="mx-auto mt-12 max-w-lg">
      <div class="flex flex-col gap-y-6">
        <!-- Nombre completo o Nombre y Apellido separados -->
        <div>
          <label for="name" class="text-base leading-normal text-base-500 font-medium">
            Nombre completo
          </label>
          <div class="mt-2.5">
            <input
              type="text"
              name="name"
              id="name"
              autocomplete="name"
              required
              aria-required="true"
              aria-describedby="name-error"
              placeholder="Ingresa tu nombre completo"
              class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white 
                     border border-transparent rounded-lg appearance-none ring-1 ring-base-200 
                     placeholder-base-400 focus:border-base-300 focus:bg-transparent 
                     focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 
                     sm:text-sm"
            />
            <span id="name-error" class="text-red-600 text-sm hidden">
              Por favor ingresa tu nombre completo.
            </span>
          </div>
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="text-base leading-normal text-base-500 font-medium">
            Correo electrónico
          </label>
          <div class="mt-2.5">
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              required
              aria-required="true"
              aria-describedby="email-error"
              placeholder="Tu correo electrónico"
              class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white 
                     border border-transparent rounded-lg appearance-none ring-1 ring-base-200 
                     placeholder-base-400 focus:border-base-300 focus:bg-transparent 
                     focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 
                     sm:text-sm"
            />
            <span id="email-error" class="text-red-600 text-sm hidden">
              Por favor ingresa una dirección de correo válida.
            </span>
          </div>
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="text-base leading-normal text-base-500 font-medium">
            Crea tu contraseña
          </label>
          <div class="mt-2.5">
            <input
              type="password"
              name="password"
              id="password"
              required
              aria-required="true"
              aria-describedby="password-error"
              placeholder="Ingresa tu contraseña"
              class="block w-full h-10 px-4 py-2 text-sm text-accent-700 duration-300 bg-white 
                     border border-transparent rounded-lg appearance-none ring-1 ring-base-200 
                     placeholder-base-400 focus:border-base-300 focus:bg-transparent 
                     focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 
                     sm:text-sm"
            />
            <span id="password-error" class="text-red-600 text-sm hidden">
              Por favor ingresa una contraseña válida.
            </span>
          </div>
        </div>
      </div>
      
      <!-- Aceptación de términos y políticas -->
      <div class="flex items-center mt-4 gap-3">
        <input
          id="agreement"
          name="agreement"
          type="checkbox"
          required
          class="size-4 rounded border-base-300 text-accent-600 focus:ring-accent-600 shadow"
        />
        <label for="agreement" class="block text-sm text-base-500 font-medium">
          Acepto los
          <a
            class="text-accent-500 font-medium hover:text-base-500 underline"
            href="/terms"
          >
            Términos de servicio
          </a>
          y la
          <a
            class="text-accent-500 font-medium hover:text-base-500 underline"
            href="/privacy"
          >
            Política de privacidad
          </a>
        </label>
      </div>

      <!-- Botón de envío del formulario -->
      <div class="mt-10">
        <button
          type="submit"
          class="flex items-center justify-center transition-all duration-200 
                 focus:ring-2 focus:outline-none text-white bg-accent-600 hover:bg-accent-700 
                 focus:ring-accent-500/50 h-10 px-6 py-3 text-base font-medium 
                 rounded-lg w-full"
        >
          Crear cuenta
        </button>
      </div>

      <!-- Enlace a "Iniciar sesión" -->
      <div class="flex items-center mt-4">
        <p class="text-sm leading-normal text-base-500 font-medium">
          ¿Ya tienes cuenta?&nbsp;
          <a
            class="text-accent-500 font-medium hover:text-base-500 underline"
            href="/signin"
          >
            Inicia sesión
          </a>
        </p>
      </div>
    </form>
  </div>
</section>